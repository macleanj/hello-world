pipeline {

  // Installed plugins:
  // Console debugging
  // - timestamps
  // GitHub intergation
  // - Pipeline: GitHub
  // - GitHub
  // - GitHub API
  // - GitHub Branch Source
  // Trigger by tag
  // - Multibranch build strategy extension
  // - Basic Branch Build Strategies Plugin
 
  // triggers {
  //   pollSCM( (BRANCH_NAME == 'master' || BRANCH_NAME == 'develop') ? '* * * * *' : '') /* default: poll once a minute */
  // }
  // triggers {
  //   pollSCM('* * * * *') /* default: poll once a minute */
  // }

  options {
    buildDiscarder(logRotator(numToKeepStr: '5', artifactNumToKeepStr: '5'))
    // timestamps()
  }

  environment {
    // Note: When empty the environment variable will not exists! Mind error handling.
    CICD_TAGS_NAME = "${TAG_NAME ? TAG_NAME : 'None'}"
    
    // GIT environment variables
    GIT_COMMIT_SHORT = sh(returnStdout: true, script: 'git rev-parse HEAD').trim().take(7)
    GIT_AUTHOR_NAME = sh(returnStdout: true, script: 'git show -s --pretty=%an').trim()

    // Jenkins environment variables
    JENKINS_PATH = sh(script: 'pwd', , returnStdout: true).trim()

    // Pre-load vriable from source control
    PREP_LOAD_ENV = sh(returnStdout: false, script: "${JENKINS_PATH}/build/config/_confConvert.sh ${CICD_TAGS_NAME} > /dev/null 2>&1")
  }
  
  agent any
  

  // Notes
  // Branches should run otherwise tags get orphaned
  
  // Filter by name (with regular expression): master|develop|PR-|feature.*|.*RELEASE OR ^((?!master).)*$|^((?!develop).)*$
  // when { tag "release-*" }
  // when { not { branch 'master' } }
  // when { branch "feature/*" }
  // when { changeRequest() }.
  // https://jenkins.io/doc/book/pipeline/syntax/#when
  stages {
    stage ('Set build environment') {
      when {
        buildingTag()
        environment name: 'CICD_TAGS_DEPLOY_ENVIRONMENT', value: 'build'
      }      
      steps {
        // environvironment only has to be loaded once
        load "$JENKINS_PATH/build/config/env.files/generic.groovy"
        load "$JENKINS_PATH/build/config/env.files/tag_env.groovy"
        load "$JENKINS_PATH/build/config/env.files/build.groovy"

        sh 'echo "Print all environment variable for Build"'
        sh 'printenv | sort'
      }
    }
    stage ('Set deploy environment') {
      when {
        buildingTag()
        not { environment name: 'CICD_TAGS_DEPLOY_ENVIRONMENT', value: 'build' }
      }
      steps {
        // environvironment only has to be loaded once
        load "$JENKINS_PATH/build/config/env.files/generic.groovy"
        load "$JENKINS_PATH/build/config/env.files/tag_env.groovy"
        load "$JENKINS_PATH/build/config/env.files/deploy_${CICD_TAGS_DEPLOY_ENVIRONMENT}.groovy"

        sh 'echo "Print all environment variable for Deployment"'
        sh 'printenv | sort'
      }
    }
    stage ('Set PR environment') {
      when { changeRequest() }
      steps {
        // environvironment only has to be loaded once
        load "$JENKINS_PATH/build/config/env.files/generic.groovy"
        load "$JENKINS_PATH/build/config/env.files/tag_env.groovy"
        load "$JENKINS_PATH/build/config/env.files/pr.groovy"

        sh 'echo "Print all environment variable for Pull Request"'
        sh 'printenv | sort'
      }
    }
    stage ('Deployment') {
      when {
        environment name: 'CICD_DEPLOY_ENABLED', value: '1'
      }      
      steps {
        sh 'Deployed'
      }
    }
  }

post {
  always {
    echo 'This will always run'
  }
  success {
    echo 'This will run only if successful'
  }
  failure {
    echo 'This will run only if failed'
  }
  unstable {
    echo 'This will run only if the run was marked as unstable'
  }
  changed {
    echo 'This will run only if the state of the Pipeline has changed'
    echo 'For example, if the Pipeline was previously failing but is now successful'
  }
}



}
